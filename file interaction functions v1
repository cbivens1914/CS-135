int readScores (int scoreArr[]/*, char nameArr[][MAX]*/) {
int check;
int index = -1;
FILE *fpscores;
//checking to make sure the file exists and can be opened
if ((fpscores = fopen ("scores.txt", "r")) == NULL) {
 printf ("Cannot open input file.\n");
} 
//opening the file
fpscores = fopen ("scores.txt", "r");
//getting the integers, succesfully gets all integers except the first for some reason
while ((check = fgetc(fpscores) != EOF) && (scoreArr[index] != '\n')) {
 index++;
 if (fscanf (fpscores, "%d", &scoreArr[index]) != 1) {
  scoreArr[index] = '\0';
 }
}

return index;
fclose(fpscores);
}//end function

